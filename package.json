{
	"name": "multi-entity-management-tool",
	"version": "1.1.1",
	"private": true,
	"description": "Entity Assignment tool for Dynamics GP",
	"homepage": ".",
	"repository": "Benjamin-S/electron-react-entity-assign",
	"author": {
		"name": "Benjamin Symons",
		"email": "mail@bensymons.com",
		"url": "https://bensymons.com"
	},
	"main": "./build/main.js",
	"scripts": {
		"dev:electron": "cross-env NODE_ENV=development webpack --config webpack.electron.config.js --mode development && electron .",
		"dev:react": "cross-env NODE_ENV=development webpack serve --config webpack.react.config.js --mode development",
		"build:electron": "cross-env NODE_ENV=production webpack --config webpack.electron.config.js --mode production",
		"build:react": "cross-env NODE_ENV=production webpack --config webpack.react.config.js --mode production",
		"build": "rimraf build && yarn build:electron && yarn build:react",
		"lint": "xo",
		"dist": "electron-builder --windows --publish always",
		"elec-pack": "yarn reactbuild && electron-builder --c.extraMetadata.main=build/electron.js",
		"postinstall": "electron-builder install-app-deps",
		"reldist": "yarn release && yarn dist",
		"release": "np",
		"test": "yarn lint"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		],
		"rules": {
			"promise/prefer-await-to-then": "off",
			"import/no-anonymous-default-export": "off",
			"@typescript-eslint/no-floating-promises": "off",
			"@typescript-eslint/no-loop-func": "off"
		}
	},
	"dependencies": {
		"@types/react": "^16.9.55",
		"@types/react-bootstrap-typeahead": "^3.4.6",
		"@types/react-dom": "^16.9.9",
		"mssql": "^5.1.0",
		"react": "^17.0.1",
		"react-bootstrap": "^1.0.0-beta.14",
		"react-bootstrap-typeahead": "^3.4.7",
		"react-dom": "^17.0.1"
	},
	"devDependencies": {
		"@babel/core": "^7.12.3",
		"@babel/plugin-proposal-class-properties": "^7.12.1",
		"@babel/plugin-proposal-optional-chaining": "^7.12.1",
		"@babel/plugin-transform-runtime": "^7.12.1",
		"@babel/preset-env": "^7.12.1",
		"@babel/preset-react": "^7.12.5",
		"@babel/preset-typescript": "^7.12.1",
		"@types/react-router-dom": "^5.1.6",
		"babel-loader": "^8.1.0",
		"bootstrap": "^4.3.1",
		"cross-env": "^7.0.2",
		"css-loader": "^5.0.1",
		"electron": "^10.1.3",
		"electron-better-ipc": "^1.1.1",
		"electron-builder": "^22.1.0",
		"electron-reload": "^1.5.0",
		"electron-store": "^6.0.1",
		"electron-timber": "^0.5.1",
		"electron-unhandled": "^3.0.2",
		"electron-updater": "^4.3.5",
		"electron-util": "^0.14.2",
		"file-loader": "^6.2.0",
		"html-webpack-plugin": "^4.5.0",
		"node-sass": "^5.0.0",
		"np": "^6.5.0",
		"react-router-dom": "^5.2.0",
		"rimraf": "^3.0.2",
		"sass-loader": "^10.0.5",
		"style-loader": "^2.0.0",
		"webpack": "^4.0.0",
		"webpack-cli": "^4.1.0",
		"webpack-dev-server": "^3.11.0",
		"xo": "^0.34.1"
	},
	"engines": {
		"node": ">=12"
	},
	"build": {
		"publish": [
			{
				"provider": "github",
				"owner": "Benjamin-S",
				"repo": "electron-react-entity-assign"
			}
		],
		"files": [
			"build/**/*",
			"node_modules/**/*",
			"./src/**"
		],
		"appId": "com.bensymons.mem-tool",
		"directories": {
			"buildResources": "assets"
		},
		"win": {
			"target": "nsis",
			"icon": "build/icon.png"
		}
	},
	"np": {
		"publish": true,
		"releaseDraft": false
	},
	"productName": "Entity Assignment"
}
