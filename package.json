{
	"name": "multi-entity-management-tool",
	"productName": "Entity Assignment",
	"version": "1.3.3",
	"description": "Entity Assignment tool for Dynamics GP",
	"private": true,
	"repository": "Benjamin-S/electron-react-entity-assign",
	"author": {
		"name": "Benjamin Symons",
		"email": "mail@bensymons.com",
		"url": "https://bensymons.com"
	},
	"main": "public/electron.js",
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "yarn lint",
		"start": "react-scripts start",
		"elec-pack": "yarn reactbuild && electron-builder --dir",
		"dist": "electron-builder --windows --publish=always",
		"release": "np",
		"reldist": "yarn release && yarn dist",
		"reactbuild": "react-scripts build",
		"development": "concurrently \"cross-env NODE_ENV=development BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\""
	},
	"dependencies": {
		"body-parser": "^1.19.0",
		"bootstrap": "^4.3.1",
		"cors": "^2.8.5",
		"electron-better-ipc": "^1.1.1",
		"electron-is-dev": "^1.1.0",
		"electron-store": "^6.0.1",
		"electron-timber": "^0.5.1",
		"electron-unhandled": "^3.0.2",
		"electron-updater": "^4.3.5",
		"electron-util": "^0.14.2",
		"express": "^4.17.1",
		"mssql": "^5.1.0",
		"react": "^16.11.0",
		"react-bootstrap": "^1.0.0-beta.14",
		"react-bootstrap-typeahead": "^3.4.7",
		"react-dom": "^16.11.0",
		"react-router-dom": "^5.1.2",
		"react-scripts": "3.2.0"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"concurrently": "^5.0.0",
		"cross-env": "^6.0.3",
		"electron": "^10.1.3",
		"electron-builder": "^22.1.0",
		"electron-debug": "^3.1.0",
		"eslint-config-xo": "^0.29.1",
		"eslint-config-xo-react": "^0.23.0",
		"eslint-plugin-react": "^7.21.3",
		"eslint-plugin-react-hooks": "^4.1.2",
		"husky": "^4.3.0",
		"node-sass": "^4.13.0",
		"np": "^6.5.0",
		"wait-on": "^3.3.0",
		"xo": "^0.30.0"
	},
	"xo": {
		"extends": "xo-react",
		"envs": [
			"node",
			"browser"
		],
		"rules": {
			"promise/prefer-await-to-then": "off",
			"import/no-unassigned-import": [
				"error",
				{
					"allow": [
						"**//*.css",
						"**//*.scss"
					]
				}
			],
			"import/extensions": [
				"error",
				{
					"allow": [
						"**/*.css",
						"**/*.scss"
					]
				}
			]
		},
		"parser": "babel-eslint"
	},
	"np": {
		"publish": true,
		"releaseDraft": false
	},
	"build": {
		"publish": [
			{
				"provider": "github",
				"owner": "Benjamin-S",
				"repo": "electron-react-entity-assign"
			}
		],
		"files": [
			"**/*",
			"!test${/*}"
		],
		"appId": "com.bensymons.mem-tool",
		"win": {
			"icon": "./build/icon.png"
		}
	},
	"homepage": ".",
	"husky": {
		"hooks": {
			"pre-push": "yarn test"
		}
	}
}
